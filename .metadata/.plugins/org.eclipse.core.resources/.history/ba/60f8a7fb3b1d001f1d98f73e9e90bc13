package tp2punto9;

public class DiscoRigido {

	String tamaño;

	//contructor
	// inyecci+ón de dependencias por constructor
	// (o sea para funcionar necesita minimo un paramentro, en este caso)
	public DiscoRigido(String tamaño) {
		this.tamaño = tamaño;
	}
	
//	public DiscoRigido() {
//	}

	//getter y setters
	public String getTamaño() {
		return tamaño;
	}

	// inyección de dependencias por setter
	// o sea que el valor lo agregas en el momento que vos quieras
	public void setTamaño(String tamaño) {
		this.tamaño = tamaño;
	}
	
}
